{
	"name": "@rspc/client",
	"version": "0.3.0",
	"description": "A blazing fast and easy to use TRPC-like server for Rust.",
	"keywords": [],
	"author": "Oscar Beaumont",
	"license": "MIT",
	"type": "module",
	"exports": "./src/index.ts",
	"publishConfig": {
		"main": "dist/index.cjs",
		"types": "dist/index.d.ts",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
				"default": "./dist/index.cjs"
			},
			"./package.json": "./package.json"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup && tsc",
		"prepare": "tsup && tsc"
	},
	"devDependencies": {
		"tsup": "^8.1.0",
		"typescript": "^5.5.3"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": [
			"esm",
			"cjs"
		],
		"splitting": true,
		"clean": true,
		"sourcemap": true
	},
	"dependencies": {
		"vitest": "^2.0.3"
	}
}
